<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pregcare.teamiv.lk.pregcare.Appointment">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow
            android:background="#f0f6cf">
            <CalendarView
                android:id="@+id/CalendarView"
                android:layout_width="fill_parent"
                android:layout_height="310dp"
                android:focusedMonthDateColor="@android:color/holo_red_light"
                android:unfocusedMonthDateColor="@android:color/holo_blue_light"
                android:minDate="12/31/2016"
                />
        </TableRow>
        <TableRow>
            <LinearLayout
                android:layout_marginTop="20dp">
                <Button
                    android:background="#a8b3a3"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:text="Create Appointment"
                    android:layout_marginRight="10dp"
                    android:id="@+id/btncreate"
                    />
                <Button
                    android:background="#a8b3a3"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:text="View/Edit Appointment"
                    android:layout_marginRight="10dp"
                    android:id="@+id/btnviewedit"
                    />
                <Button
                    android:background="#a8b3a3"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:text="Search Appointment"
                    android:id="@+id/btnsearch"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout>
                <Button
                    android:background="#a8b3a3"
                    android:layout_width="185dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:text="Delete Appointment"
                    android:layout_marginRight="10dp"
                    android:id="@+id/btndelete"
                    />
                <Button
                    android:background="#a8b3a3"
                    android:layout_width="185dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:text="Move Appointment"
                    android:layout_marginRight="10dp"
                    android:id="@+id/btnmove"
                    />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</RelativeLayout>
